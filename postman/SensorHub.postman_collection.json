{
	"info": {
		"name": "SensorHub API",
		"description": "IoT sensor data API - quick testing collection.\n\nRun requests in order (1-7) for the happy path flow.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:5000",
			"type": "string"
		},
		{
			"key": "jwt",
			"value": "",
			"type": "string"
		},
		{
			"key": "deviceId",
			"value": "",
			"type": "string"
		},
		{
			"key": "deviceApiKey",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "1. Register",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"YourPassword123!\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/auth/register",
					"host": ["{{baseUrl}}"],
					"path": ["api", "v1", "auth", "register"]
				}
			},
			"response": []
		},
		{
			"name": "2. Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"if (jsonData.token) {",
							"    pm.collectionVariables.set('jwt', jsonData.token);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"YourPassword123!\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/auth/login",
					"host": ["{{baseUrl}}"],
					"path": ["api", "v1", "auth", "login"]
				}
			},
			"response": []
		},
		{
			"name": "3. Create Device",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"if (jsonData.id) {",
							"    pm.collectionVariables.set('deviceId', jsonData.id);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{jwt}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"Warehouse Sensor\",\n  \"location\": \"Building A\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/devices",
					"host": ["{{baseUrl}}"],
					"path": ["api", "v1", "devices"]
				}
			},
			"response": []
		},
		{
			"name": "4. Generate Device API Key",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"if (jsonData.apiKey) {",
							"    pm.collectionVariables.set('deviceApiKey', jsonData.apiKey);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt}}"
					}
				],
				"body": {
					"mode": "none"
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/devices/{{deviceId}}/api-key",
					"host": ["{{baseUrl}}"],
					"path": ["api", "v1", "devices", "{{deviceId}}", "api-key"]
				}
			},
			"response": []
		},
		{
			"name": "5. Ingest Reading",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "X-Device-Key",
						"value": "{{deviceApiKey}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"temperature\": 25.5,\n  \"humidity\": 60.0\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/readings/ingest",
					"host": ["{{baseUrl}}"],
					"path": ["api", "v1", "readings", "ingest"]
				}
			},
			"response": []
		},
		{
			"name": "6. Get Readings",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/v1/devices/{{deviceId}}/readings?limit=100",
					"host": ["{{baseUrl}}"],
					"path": ["api", "v1", "devices", "{{deviceId}}", "readings"],
					"query": [
						{
							"key": "limit",
							"value": "100"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "7. Get Alerts",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/v1/alerts?limit=100",
					"host": ["{{baseUrl}}"],
					"path": ["api", "v1", "alerts"],
					"query": [
						{
							"key": "limit",
							"value": "100"
						}
					]
				}
			},
			"response": []
		}
	]
}
